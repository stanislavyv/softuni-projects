<div class="container">
    {{> header}}
    <br>
    <div class="row bg-light text-dark" id="{{movieId}}">
        <h1>Movie title: {{title}}</h1>

        <div class="col-md-8">
            <img class="img-thumbnail" src="{{imageUrl}}" alt="Movie" width="400" height="200">
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3 ">Movie Description</h3>
            <p>{{description}}</p>
            {{#if isCreator}}
            <a class="btn btn-danger" href="#/details/{{movieId}}/delete">Delete</a>
            <a class="btn btn-warning" href="#/details/{{movieId}}/edit">Edit</a>
            {{else}}
            {{#if alreadyLiked}}
            <span class="enrolled-span" id="likes">Liked {{likes}}</span>
            {{else}}
            <a class="btn btn-primary" href="#/details/{{movieId}}/like">Like</a>
            {{/if}}
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}