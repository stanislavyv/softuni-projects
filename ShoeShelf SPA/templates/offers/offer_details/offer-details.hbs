{{> header}}
<div class="offer-details">
    <h1>{{brand}} {{name}}</h1>
    <div class="info">
        <img src="{{imageUrl}}" alt="product">
        <div class="description">{{description}}
            <br>
            <br>
            <p class="price">Buyers: {{numPeopleBought}}</p>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isCreator}}
        <a href="#/{{offerId}}/edit">Edit</a> <!-- implement -->
        <a href="#/{{offerId}}/delete">Delete</a>
        {{else}}
        {{#if alreadyBought}}
        <span>You bought it</span>
        {{else}}
        <a href="#/{{offerId}}/buy">Buy</a>
        {{/if}}
        {{/if}}
    </div>
</div>
{{> footer}}